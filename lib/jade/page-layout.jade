extends layout

mixin vid-img(id, vendor)
  div(data-vid-id="{{ videos.#{id} }}" data-vid-vendor=vendor)
    img

mixin link(id, classname)
  a(href="{{ links.#{id}.href }}" class=classname) {{ links.#{id}.title }}

mixin img(id, component)
  img(src="//cdn.everything.io/vegankit/images/{{ images.#{id} }}.jpg" data-component=component)

block content
  include ./_includes/_page-nav.jade

  .wrapper(data-page-type="single")
    section.page-content
      block page-content

    aside.sidebar-content
      block sidebar-content

      article.twitter-ad(data-component="video_box")
        - var butterfly = fs.readFileSync('lib/img/butterfly.svg')
        != butterfly
        <a href="https://twitter.com/vegankitdotcom" class="twitter-follow-button" data-show-count="false" data-size="large">Follow @vegankitdotcom</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
        h1 Follow VeganKit on Twitter
        p Vegan news, recipes, photos, and more tweeted every day



  footer.main
    .wrapper
      ul
        li
          a(href="http://twitter.com/vegankitdotcom") @VeganKitDotCom
        li
          img.dont-donate(src="//cdn.everything.io/vegankit/images/dontdonate_vertical_white.png")
        li
          a(href="mailto:info@vegankit.com") info@vegankit.com

mixin dollar(lower, upper)
  span.dollars
    - var n = 0

    while n < lower
      | $
      - n++

    - var n = 0

    | -

    while n < upper
      | $
      - n++
