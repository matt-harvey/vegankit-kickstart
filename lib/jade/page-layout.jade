extends layout

mixin vid-img(id, vendor)
  div(data-vid-id="{{ videos.#{id} }}" data-vid-vendor=vendor)
    img

mixin link(id, classname)
  a(href="{{ links.#{id}.href }}" class=classname) {{ links.#{id}.title }}

mixin img(id, component)
  img(src="//cdn.everything.io/vegankit/images/{{ images.#{id} }}.jpg" data-component=component)

block content
  include ./_includes/_page-nav.jade

  .wrapper(data-page-type="single")
    section.page-content
      block page-content

    aside.sidebar-content
      block sidebar-content

  footer.main
    .wrapper
      ul
        li
          a(href="http://twitter.com/vegankitdotcom") @VeganKitDotCom
        li
          img.dont-donate(src="//cdn.everything.io/vegankit/images/dontdonate_vertical_white.png")
        li
          a(href="mailto:info@vegankit.com") info@vegankit.com

mixin dollar(lower, upper)
  span.dollars
    - var n = 0

    while n < lower
      | $
      - n++

    - var n = 0

    | -

    while n < upper
      | $
      - n++

